<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.RatingBar.Small" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_small_rating</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="Widget.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_normal_rating</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:maxHeight">17dp</item>
    </style>

    <!--Text View-->
    <style name="Widget.TextView.H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.TextView.H6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.TextView.Body1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="Widget.TextView.Body2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.TextView.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <!--Bars-->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_menu_home_item_color_selector</item>
    </style>

    <!--Collapse Toolbar-->
    <style name="CollapseToolbarTheme" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="expandedTitleTextAppearance">@style/CollapseToolbarTheme.Text.Expanded</item>
        <item name="collapsedTitleTextAppearance">@style/CollapseToolbarTheme.Text.Collapsed</item>
        <item name="contentScrim">?colorPrimary</item>
        <item name="statusBarScrim">?colorPrimary</item>
    </style>

    <style name="CollapseToolbarTheme.Text.Expanded" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="CollapseToolbarTheme.Text.Collapsed" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?colorOnPrimary</item>

    </style>
</resources>